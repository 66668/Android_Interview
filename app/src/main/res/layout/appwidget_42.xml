<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#80F1CA93"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:weightSum="3">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#CD94E9"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:text="模拟音乐小部件——标题"
        android:textColor="#0997f0"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="5px"
            android:layout_toLeftOf="@+id/widget_pause"
            android:layout_weight="1"
            android:background="#F82668"
            android:gravity="center"
            android:text="开始" />

        <TextView
            android:id="@+id/tv_play"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="5px"
            android:layout_toLeftOf="@+id/widget_pause"
            android:layout_weight="1"
            android:background="#A3FDA4"
            android:gravity="center"
            android:text="播放" />

        <TextView
            android:id="@+id/tv_stop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="5px"
            android:layout_toLeftOf="@+id/widget_pause"
            android:layout_weight="1"
            android:background="#B3BBF0"
            android:gravity="center"
            android:text="结束" />

    </LinearLayout>

</LinearLayout>